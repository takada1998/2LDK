<script>
    document.addEventListener('DOMContentLoaded', function () {
        const hbgMenu = document.querySelector('.c-hbgmenu');
        const hbg = document.querySelector('.l-hbg');
        const hbgCloseBtn = document.querySelector('.l-hbg__btn');
        const overlay = document.querySelector('.l-hbg__overlay');

        // ハンバーガーメニューの開閉
        hbgMenu.addEventListener('click', function () {
            hbg.classList.add('is-active');
            overlay.classList.add('is-active');
        });

        hbgCloseBtn.addEventListener('click', function () {
            hbg.classList.remove('is-active');
            overlay.classList.remove('is-active');
        });

        overlay.addEventListener('click', function () {
            hbg.classList.remove('is-active');
            overlay.classList.remove('is-active');
        });

        // トグルメニューの開閉（MENS, WOMEN, GOODS, ITEMを含む）
        const toggleElements = document.querySelectorAll('.l-hbg__nav span > span, .l-hbg__nav a, .l-hbg__nav > ul > li > span.class');
        toggleElements.forEach(element => {
            element.addEventListener('click', function (event) {
                const parentLi = this.closest('li'); // 親の<li>を取得
                const subMenu = parentLi.querySelector('ul'); // 対応するサブメニュー
                const toggleIcon = this.querySelector('span.class') || this; // 対象の <span class> を取得

                if (subMenu) {
                    event.preventDefault(); // デフォルト動作をキャンセル
                    subMenu.classList.toggle('is-open'); // サブメニューの開閉

                    // アイコンの状態を切り替え
                    if (toggleIcon) {
                        toggleIcon.classList.toggle('is-open');
                    }
                }
            });
        });
    });



    // 初期化スクリプト
    $('.l-main__topSlider__inner').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 3000,
        dots: false,
        arrows: true,
        infinite: true,
        centerMode: true,
        variableWidth: true,
        responsive: [
            {
                breakpoint: 1440,
                settings: {
                    arrows: false,
                    centerPadding: '30px',
                    slidesToShow: 1
                }
            }]
    });

    $('.l-main__featureSlider__inner').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        autoplay: true,
        dots: true,
        dotsClass: "slick-dots",
        arrows: true,
        infinite: true,
        centerMode: true,
        variableWidth: true,
        responsive: [
            {
                breakpoint: 768,
                settings: {
                    arrows: false,
                    centerPadding: '30px',
                    slidesToShow: 1
                }
            }]
    });

    $('.l-main__recommend__inner').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        autoplay: true,
        dots: true,
        dotsClass: "slick-dots",
        arrows: true,
        infinite: true,
        centerMode: true,
        variableWidth: true,
        responsive: [
            {
                breakpoint: 768,
                settings: {
                    arrows: false
                }
            }]
    });

    const toTopButton = document.querySelector('.c-btn__totop');
    window.addEventListener('scroll', function () {
        if (window.scrollY > 300) {
            toTopButton.classList.add('is-visible');
        } else {
            toTopButton.classList.remove('is-visible');
        }
    });

    toTopButton.addEventListener('click', function () {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });

    const tabs = document.querySelectorAll('.p-rankingnav input[type="radio"]');
    const contents = document.querySelectorAll('.p-rankingcontent_content');

    contents.forEach(content => {
        content.style.display = 'none';
    });
    document.getElementById('p-rankingcontent_content-all').style.display = 'block';

    tabs.forEach(tab => {
        tab.addEventListener('change', function () {
            contents.forEach(content => {
                content.style.display = 'none';
            });
            const targetContent = document.getElementById(`p-rankingcontent_content-${this.id.split('-')[1]}`);
            if (targetContent) {
                targetContent.style.display = 'block';
            }
        });
    });
</script>
